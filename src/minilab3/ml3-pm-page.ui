<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Ml3PmPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Pitch / Mod</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="AdwPreferencesPage">

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="AdwSwitchRow">
                    <child><object class="ArControl"><property name="id">0x0e00</property></object></child>
                    <property name="title" translatable="yes">Pitchbend</property>
                  </object>
                </child>

                <child>
                  <object class="ScComboRow">
                    <child><object class="ArControl"><property name="id">0x0f00</property></object></child>
                    <property name="title" translatable="yes">Pitchbend Settings</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Standard</item>
                          <item>Hold</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="AdwSwitchRow">
                    <child><object class="ArControl"><property name="id">0x1000</property></object></child>
                    <property name="title" translatable="yes">Modwheel</property>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>

      </object>
    </property>

  </template>
</interface>
