<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Ks32ControllerPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Controller</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="ScPreferencesPage">

            <child>
              <object class="ArFirmwareInfoGroup"/>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScComboRow">
                    <child><object class="ScArturiaControl"><property name="id">0x4116</property></object></child>
                    <property name="title" translatable="yes">User Channel</property>
                    <property name="subtitle" translatable="yes">Keyboard MIDI Channel</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>1</item>
                          <item>2</item>
                          <item>3</item>
                          <item>4</item>
                          <item>5</item>
                          <item>6</item>
                          <item>7</item>
                          <item>8</item>
                          <item>9</item>
                          <item>10</item>
                          <item>11</item>
                          <item>12</item>
                          <item>13</item>
                          <item>14</item>
                          <item>15</item>
                          <item>16</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="Ks32ChRow">
                    <child><object class="ScArturiaControl"><property name="id">0x4107</property></object></child>
                    <property name="title" translatable="yes">MIDI Input Channel</property>
                    <property name="subtitle" translatable="yes">USB/MIDI CV channel when Seq/Arp are stopped</property>
                  </object>
                </child>

                <child>
                  <object class="AdwSwitchRow">
                    <child><object class="ScArturiaControl"><property name="id">0x4108</property></object></child>
                    <property name="title" translatable="yes">MIDI Thru</property>
                    <property name="subtitle" translatable="yes">Patch MIDI In to Out</property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="ScComboRow">
                    <child><object class="ScArturiaControl"><property name="id">0x4119</property></object></child>
                    <property name="title" translatable="yes">Velocity Curve</property>
                    <property name="subtitle" translatable="yes">Sets velocity response type</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Log</item>
                          <item>Lin</item>
                          <item>AntiLog</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScComboRow">
                    <child><object class="ScArturiaControl"><property name="id">0x411a</property></object></child>
                    <property name="title" translatable="yes">Aftertouch Curve</property>
                    <property name="subtitle" translatable="yes">Sets Aftertouch response type</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Log</item>
                          <item>Lin</item>
                          <item>AntiLog</item>
                          <item>Soft</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="AdwSpinRow">
                    <child><object class="ScArturiaControl"><property name="id">0x416b</property></object></child>
                    <property name="title" translatable="yes">LED Brightness</property>
                    <property name="subtitle" translatable="yes">Adjusts the brightness level of the KeyStep LEDs</property>
                    <property name="adjustment">
                      <object class="GtkAdjustment">
                        <property name="lower">10</property>
                        <property name="upper">100</property>
                        <property name="page-increment">10</property>
                        <property name="step-increment">1</property>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
