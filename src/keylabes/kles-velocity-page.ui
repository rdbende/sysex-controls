<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="KlesVelocityPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Velocity</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="ScPreferencesPage">

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScComboRow">
                    <child><object class="ArControl"><property name="id">0x4019</property></object></child>
                    <property name="title" translatable="yes">Key Velocity Curve</property>
                    <property name="subtitle" translatable="yes">To personalize the responsiveness of the keyboard.</property>
                    <property name="subtitle-lines">2</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Linear</item>
                          <item>Logarithmic</item>
                          <item>Exponential</item>
                          <item>Full</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScComboRow">
                    <child><object class="ArControl"><property name="id">0x401a</property></object></child>
                    <property name="title" translatable="yes">Pad Velocity Curve</property>
                    <property name="subtitle" translatable="yes">To personalize the responsiveness of the pads.</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Linear</item>
                          <item>Logarithmic</item>
                          <item>Exponential</item>
                          <item>Full</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
