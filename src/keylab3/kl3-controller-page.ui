<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Kl3ControllerPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Controller</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="ScPreferencesPage">

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScComboRow">
                    <child><object class="ArControl"><property name="id">0x0000</property></object></child>
                    <property name="title" translatable="yes">DAW Protocol</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Live</item>
                          <item>Logic Pro</item>
                          <item>Cubase</item>
                          <item>FL Studio</item>
                          <item>Bitwig</item>
                          <item>Pro Tools</item>
                          <item>Reaper</item>
                          <item>Studio One</item>
                          <item>Reason</item>
                          <item>MCU</item>
                          <item>HUI</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="AdwSpinRow">
                    <child><object class="ArControl"><property name="id">0x0100</property></object></child>
                    <property name="title" translatable="yes">Display Brightness</property>
                    <property name="adjustment">
                      <object class="GtkAdjustment">
                        <property name="lower">0</property>
                        <property name="upper">100</property>
                        <property name="value">0</property>
                        <property name="page-increment">10</property>
                        <property name="step-increment">1</property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScComboRow">
                    <child><object class="ArControl"><property name="id">0x0200</property></object></child>
                    <property name="title" translatable="yes">Sleep Mode</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>5 minutes</item>
                          <item>15 minutes</item>
                          <item>30 minutes</item>
                          <item>5 minutes Vegas</item>
                          <item>15 minutes Vegas</item>
                          <item>30 minutes Vegas</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="AdwSwitchRow">
                    <child><object class="ArControl"><property name="id">0x0500</property></object></child>
                    <property name="title" translatable="yes">Low power</property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="AdwSwitchRow">
                    <child><object class="ArControl"><property name="id">0x0300</property></object></child>
                    <property name="title" translatable="yes">Welcome Page</property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScComboRow">
                    <child><object class="ArControl"><property name="id">0x3d00</property></object></child>
                    <property name="title" translatable="yes">Pad Sensitivity</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Low</item>
                          <item>Medium</item>
                          <item>High</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScComboRow">
                    <child><object class="ArControl"><property name="id">0x3e00</property></object></child>
                    <property name="title" translatable="yes">Aftertouch Sensitivity</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Low</item>
                          <item>Medium</item>
                          <item>High</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
