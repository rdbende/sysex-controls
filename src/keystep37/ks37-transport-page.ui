<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Ks37TransportPage" parent="ScPreferencesPage">

    <child>
      <object class="AdwPreferencesGroup">

        <child>
          <object class="ScComboRow">
            <child><object class="ScArturiaControl"><property name="control-id">0x4127</property></object></child>
            <property name="title" translatable="yes">Play / Pause</property>
            <property name="subtitle">Pause or 'stutter' sequence</property>
            <property name="model">
              <object class="ScControlValueList">
                <items>
                  <item>Pause</item>
                  <item>Reset</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="ScComboRow" id="transport_mode">
            <child><object class="ScArturiaControl"><property name="control-id">0x4120</property></object></child>
            <property name="title" translatable="yes">Transport Mode</property>
            <property name="model">
              <object class="ScControlValueList">
                <items>
                  <item>Off</item>
                  <item>MIDI CC</item>
                  <item>MMC</item>
                  <item>Both</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <binding name="visible">
          <closure type='gboolean' function='cv_in'>
            <lookup type='ScComboRow' name='selected-item'>transport_mode</lookup>
            <constant type='GVariant'>[0x01, 0x03]</constant>
          </closure>
        </binding>

        <child>
          <object class="ScComboRow">
            <child><object class="ScArturiaControl"><property name="control-id">0x4121</property></object></child>
            <property name="title" translatable="yes">Stop Channel</property>
            <property name="model">
              <object class="ScControlValueList">
                <items>
                  <item>1</item>
                  <item>2</item>
                  <item>3</item>
                  <item>4</item>
                  <item>5</item>
                  <item>6</item>
                  <item>7</item>
                  <item>8</item>
                  <item>9</item>
                  <item>10</item>
                  <item>11</item>
                  <item>12</item>
                  <item>13</item>
                  <item>14</item>
                  <item>15</item>
                  <item>16</item>
                  <item value="0x41">User</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="ScComboRow">
            <child><object class="ScArturiaControl"><property name="control-id">0x4122</property></object></child>
            <property name="title" translatable="yes">Rec Channel</property>
            <property name="model">
              <object class="ScControlValueList">
                <items>
                  <item>1</item>
                  <item>2</item>
                  <item>3</item>
                  <item>4</item>
                  <item>5</item>
                  <item>6</item>
                  <item>7</item>
                  <item>8</item>
                  <item>9</item>
                  <item>10</item>
                  <item>11</item>
                  <item>12</item>
                  <item>13</item>
                  <item>14</item>
                  <item>15</item>
                  <item>16</item>
                  <item value="0x41">User</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="ScComboRow">
            <child><object class="ScArturiaControl"><property name="control-id">0x4123</property></object></child>
            <property name="title" translatable="yes">Play Channel</property>
            <property name="model">
              <object class="ScControlValueList">
                <items>
                  <item>1</item>
                  <item>2</item>
                  <item>3</item>
                  <item>4</item>
                  <item>5</item>
                  <item>6</item>
                  <item>7</item>
                  <item>8</item>
                  <item>9</item>
                  <item>10</item>
                  <item>11</item>
                  <item>12</item>
                  <item>13</item>
                  <item>14</item>
                  <item>15</item>
                  <item>16</item>
                  <item value="0x41">User</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <binding name="visible">
          <closure type='gboolean' function='cv_in'>
            <lookup type='ScComboRow' name='selected-item'>transport_mode</lookup>
            <constant type='GVariant'>[0x01, 0x03]</constant>
          </closure>
        </binding>

        <child>
          <object class="ScCcRow">
            <child><object class="ScArturiaControl"><property name="control-id">0x4124</property></object></child>
            <property name="title" translatable="yes">Stop CC</property>
          </object>
        </child>

        <child>
          <object class="ScCcRow">
            <child><object class="ScArturiaControl"><property name="control-id">0x4125</property></object></child>
            <property name="title" translatable="yes">Rec CC</property>
          </object>
        </child>

        <child>
          <object class="ScCcRow">
            <child><object class="ScArturiaControl"><property name="control-id">0x4126</property></object></child>
            <property name="title" translatable="yes">Play CC</property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
