<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="MicrolabPitchPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Pitch Bend</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="ScPreferencesPage">

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScComboRow" id="control_mode">
                    <child><object class="ScArturiaControl"><property name="id">0x0141</property></object></child>
                    <property name="title" translatable="yes">Mode</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item value="0x00">Off</item>
                          <item value="0x10">Pitch Bend</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScComboRow">
                    <child><object class="ScArturiaControl"><property name="id">0x0641</property></object></child>
                    <property name="title" translatable="yes">Option</property>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x10]</constant>
                      </closure>
                    </binding>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Standard</item>
                          <item>Hold</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="MicrolabChRow">
                    <child><object class="ScArturiaControl"><property name="id">0x0241</property></object></child>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x10]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
