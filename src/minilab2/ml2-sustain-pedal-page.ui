<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Ml2SustainPedalPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Sustain Pedal</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="ScPreferencesPage">

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScComboRow" id="control_mode">
                    <child><object class="ScArturiaControl"><property name="id">0x0150</property></object></child>
                    <property name="title" translatable="yes">Mode</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item value="0x00">Off</item>
                          <item value="0x08">Switched Control</item>
                          <item value="0x09">MIDI Note</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScComboRow" id="control_option">
                    <child><object class="ScArturiaControl"><property name="id">0x0650</property></object></child>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x08, 0x09]</constant>
                      </closure>
                    </binding>
                    <property name="title" translatable="yes">Option</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Toggle</item>
                          <item>Gate</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="Ml2ChRow">
                    <child><object class="ScArturiaControl"><property name="id">0x0250</property></object></child>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x08, 0x09]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

                <child>
                  <object class="ScCcRow">
                    <child><object class="ScArturiaControl"><property name="id">0x0350</property></object></child>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x08]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

                <child>
                  <object class="AdwSpinRow">
                    <child><object class="ScArturiaControl"><property name="id">0x0450</property></object></child>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x08]</constant>
                      </closure>
                    </binding>
                    <property name="title" translatable="yes">Off Value</property>
                    <property name="adjustment">
                      <object class="GtkAdjustment">
                        <property name="lower">0</property>
                        <property name="upper">127</property>
                        <property name="page-increment">10</property>
                        <property name="step-increment">1</property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="AdwSpinRow">
                    <child><object class="ScArturiaControl"><property name="id">0x0550</property></object></child>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x08]</constant>
                      </closure>
                    </binding>
                    <property name="title" translatable="yes">On Value</property>
                    <property name="adjustment">
                      <object class="GtkAdjustment">
                        <property name="lower">0</property>
                        <property name="upper">127</property>
                        <property name="page-increment">10</property>
                        <property name="step-increment">1</property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScNoteRow">
                    <child><object class="ScArturiaControl"><property name="id">0x0350</property></object></child>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">control_mode</lookup>
                        <constant type="GVariant">[0x09]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
