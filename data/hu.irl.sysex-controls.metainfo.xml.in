<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>hu.irl.sysex-controls</id>
  <launchable type="desktop-id">hu.irl.sysex-controls.desktop</launchable>
  <name>SysEx Controls</name>
  <developer id="hu.irl">
    <name translatable="no">Gergo Koteles</name>
  </developer>
  <summary>SysEx Controls for Linux</summary>
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <description>
    <p>
      This is a GTK UI that allows to configure the Arturia KeyStep 37,
      MiniLab MkII, MiniLab 3, BeatStep MIDI keyboards.
      It currently allows for reading the control settings, changing them and
      writing back to the device.
    </p>
  </description>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
    <control>tablet</control>
  </supports>
  <recommends>
    <display_length compare="ge">300</display_length>
  </recommends>
  <content_rating type="oars-1.1"/>
  <url type="homepage">https://github.com/soyersoyer/sysex-controls</url>
  <url type="bugtracker">https://github.com/soyersoyer/sysex-controls/issues</url>
  <screenshots>
    <screenshot type="default">
      <image>https://github.com/soyersoyer/sysex-controls/raw/v0.2.1/data/screenshots/page_1.png</image>
      <caption>KeyStep 37 Controller page</caption>
    </screenshot>
  </screenshots>
  <releases>
    <release version="0.2.1" date="2024-10-04">
      <description>
        <ul>
          <li>MiniLab 3 global controls</li>
          <li>MiniLab mkII global controls</li>
          <li>BeatStep global controls</li>
          <li>KeyStep 37 additional transport controls</li>
        </ul>
      </description>
    </release>
    <release version="0.2.0" date="2024-09-30">
      <description>
        <ul>
          <li>Renamed to SysEx Controls</li>
          <li>MiniLab mkII color pad controls</li>
        </ul>
      </description>
    </release>
    <release version="0.1.0" date="2024-09-25">
      <description>
        <ul>
          <li>Initial release</li>
        </ul>
      </description>
    </release>
  </releases>
</component>

